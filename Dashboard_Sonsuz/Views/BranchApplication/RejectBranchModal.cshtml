@using Dashboard.Models
@using Dashboard.Resources
@inject LocServices SharedLocalizer
@model Branch


<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@SharedLocalizer.GetLocalizedHtmlString("RejectApplication")</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Html.BeginForm("RejectBranch", "BranchApplication", FormMethod.Post))
        {
            <div class="modal-body">

                <div class="form-group">
                    <label for="firstname">@SharedLocalizer.GetLocalizedHtmlString("Message")</label>
                    <input type="text" name="message" id="message" class="form-control">
                </div>
                <input type="hidden" id="branchId" name="branchId" value="@Model.branchId">
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("Send")</button>
            </div>
        }
    </div>
</div>