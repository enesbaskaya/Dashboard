@using Dashboard_Sonsuz.Models
@using Dashboard_Sonsuz
@{
    Layout = "~/Views/Shared/_LeftLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row align-items-center mb-2">
                <div class="col">
                    <h2 class="h5 page-title">You are, Welcome!</h2>
                </div>
            </div>
            <div class="mb-2 align-items-center">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="row mt-1 align-items-center">
                            <div class="col-12 col-lg-4 text-left pl-4">
                                <span class="h3">Haftalık İstatistik</span>
                            </div>
                            <div class="col-6 col-lg-2 text-center py-4">
                                <p class="mb-1 small text-muted">Kullanıcı Sayısı</p>
                                <span class="h3">@ViewBag.userCount</span><br />
                            </div>
                            <div class="col-6 col-lg-2 text-center py-4 mb-2">
                                <p class="mb-1 small text-muted">İşletme Sayısı</p>
                                <span class="h3">@ViewBag.branchCount</span><br />
                            </div>
                            <div class="col-6 col-lg-2 text-center py-4">
                                <p class="mb-1 small text-muted">Saha Sayısı</p>
                                <span class="h3">@ViewBag.areaCount</span><br />
                            </div>
                        </div>
                        <div class="chartbox mr-4">
                            <div id="areaChart"></div>
                        </div>
                    </div> <!-- .card-body -->
                </div> <!-- .card -->
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card shadow">
                        <div class="card-header">
                            <strong class="card-title">Recent Data</strong>
                            <a class="float-right small text-muted" href="@Url.Action("Index", "Payment")">Hepiciğini Gör</a>
                        </div>
                        <div class="card-body my-n2">
                            <table class="table table-striped table-hover table-borderless">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Hesap Sahibi</th>
                                        <th>Banka Adı</th>
                                        <th>IBAN</th>
                                        <th>Miktar (₺)</th>
                                        <th>Alıcı</th>
                                        <th>Gönderen</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var actions = ViewBag.transActions;
                                        foreach (TransActions transAction in actions)
                                        {
                                            <tr>
                                                <td>@transAction.transId</td>
                                                <td scope="col">@(transAction.amount < 0 ? "BiMaçVar!":transAction.card.cardOwner)</td>
                                                <td>@(transAction.amount < 0 ? "BiMaçVar!": transAction.card.bankName)</td>
                                                <td>@(transAction.amount < 0 ? "BiMaçVar!":transAction.card.iban)</td>
                                                <td style="color: @(transAction.amount < 0 ? "forestgreen" :  "orange")">@(transAction.amount < 0 ? -transAction.amount : transAction.amount)₺</td>
                                                <td>@((transAction.amount > 0) ? transAction.card.cardOwner : "BiMaçVar!")</td>
                                                <td>@((transAction.amount < 0) ? transAction.card.cardOwner : "BiMaçVar!")</td>
                                                <td>@transAction.date</td>
                                                <td><i style="color: @(transAction.checkActive ? "lawngreen" :  "orangered")" class="@(transAction.checkActive ? "fa fa-check" : "fa fa-times")"></i></td>
                                            </tr>

                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div> <!-- Striped rows -->
            </div> <!-- .row-->
        </div> <!-- .col-12 -->
    </div> <!-- .row -->
</div> <!-- .container-fluid -->
