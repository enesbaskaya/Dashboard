@using Dashboard_Sonsuz.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Dashboard_Sonsuz.Models.TransActions>
@{
    Layout = "~/Views/Shared/_LeftLayout.cshtml";
}
<div class="container-fluid">
    <div class="row my-4">
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 style="color: orange" class="mb-1 text-center">Gider</h4>
                            <h3 class="card-title mb-0 text-center">@ViewBag.sendData ₺</h3>
                        </div>
                    </div> <!-- /. row -->
                </div> <!-- /. card-body -->
            </div> <!-- /. card -->
        </div> <!-- /. col -->
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 style="color: lawngreen" class="mb-1 text-center">Gelir</h4>
                            <h3 class="card-title mb-0 text-center">@ViewBag.receiveData ₺</h3>
                            
                        </div>
                    </div> <!-- /. row -->
                </div> <!-- /. card-body -->
            </div> <!-- /. card -->
        </div> <!-- /. col -->
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 style="color: green"  class="mb-1 text-center">Kâr</h4>
                            <h3 class="card-title mb-0 text-center">@ViewBag.worth ₺</h3>
                        </div>
                    </div> <!-- /. row -->
                </div> <!-- /. card-body -->
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="card shadow">
                        <div class="card-header">
                            <strong class="card-title">Recent Data</strong>
                        </div>
                        <div class="card-body my-n2">
                            <table class="table table-striped table-hover table-borderless">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Hesap Sahibi</th>
                                        <th>Banka Adı</th>
                                        <th>IBAN</th>
                                        <th>Miktar (₺)</th>
                                        <th>Alıcı</th>
                                        <th>Gönderen</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (TransActions transAction in Model)
                                        {
                                            <tr>
                                                <td>@transAction.transId</td>
                                                <td scope="col">@(transAction.amount < 0 ? "BiMaçVar!":transAction.card.cardOwner)</td>
                                                <td>@(transAction.amount < 0 ? "BiMaçVar!": transAction.card.bankName)</td>
                                                <td>@(transAction.amount < 0 ? "BiMaçVar!":transAction.card.iban)</td>
                                                <td style="color: @(transAction.amount < 0 ? "forestgreen" :  "orange")">@(transAction.amount < 0 ? -transAction.amount : transAction.amount)₺</td>
                                                <td>@((transAction.amount > 0) ? transAction.card.cardOwner : "BiMaçVar!")</td>
                                                <td>@((transAction.amount < 0) ? transAction.card.cardOwner : "BiMaçVar!")</td>
                                                <td>@transAction.date</td>
                                                <td><i style="color: @(transAction.checkActive ? "lawngreen" :  "orangered")" class="@(transAction.checkActive ? "fa fa-check" : "fa fa-times")"></i></td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button class="btn btn-sm dropdown-toggle more-vertical" type="button" id="dr1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <span class="text-muted sr-only">Action</span>
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dr1">
                                                            <a class="dropdown-item" href="@Url.Action("Update", "Payment", new {transId = transAction.transId})">Onayla</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>

                                        }
                                    }

                                </tbody>

                            </table>
                            <div class="d-flex justify-content-center">
                                <div class="col-example">
                                    <pager list="@Model" asp-controller="Payment" asp-action="Index" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>